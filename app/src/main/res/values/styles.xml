<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="CaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主色、暗色、前景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- 白色背景 -->
        <item name="android:windowBackground">@color/white</item>

        <!-- 状态栏 & 导航栏  -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Toolbar 样式 -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>
    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 主色、暗色、前景色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- 白色背景 -->
        <item name="android:windowBackground">@color/white</item>

        <!-- 状态栏 & 导航栏  -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Toolbar 样式 -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <!-- Toolbar 的自定义样式，保证也是白底黑字 -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Toolbar.Title</item>
        <item name="android:popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="TextAppearance.App.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 统一对话框主题 -->
    <style name="AppDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- 关键修复项：禁用全屏模式 -->
        <item name="android:windowFullscreen">false</item>
        <item name="colorSurface">@android:color/white</item>
<!--        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>-->
    </style>

    <!-- 自定义带指定边框色的 OutlinedButton 样式 -->
    <style name="Widget.App.MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- 边框宽度 -->
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
        <!-- 边框颜色 -->
        <item name="strokeColor">@color/primaryRed</item>
        <!-- 背景色（Outlined 默认透明，如果想白底可加这一行） -->
        <item name="backgroundTint">@color/white</item>
        <!-- 文字颜色，可按需改 -->
        <item name="android:textColor">@color/primaryRed</item>
    </style>

    <!-- 自定义带指定边框色的 OutlinedButton 样式 -->
    <style name="Widget.App.MyOutlinedButtonConfirm" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- 边框宽度 -->
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
        <!-- 边框颜色 -->
        <item name="strokeColor">@color/primaryRed</item>
        <item name="android:solidColor">@color/primaryRed</item>
        <!-- 背景色（Outlined 默认透明，如果想白底可加这一行） -->
        <item name="backgroundTint">@color/primaryRed</item>
        <!-- 文字颜色，可按需改 -->
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 淡入淡出动效 -->
<!--    <style name="DialogAnimation">-->
<!--        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>-->
<!--        <item name="android:windowExitAnimation">@anim/dialog_exit</item>-->
<!--    </style>-->

</resources>
