    <RelativeLayout android:id="@+id/preview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <com.pedro.rtplibrary.view.OpenGlView
            android:id="@+id/openglview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:keepAspectRatio="true"
            />
        <RelativeLayout
            android:paddingHorizontal="68dp"
            android:id="@+id/rl_usb_disconnect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDisconnect"
            >
            <View
                android:layout_centerInParent="true"
                android:id="@+id/view_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_above="@id/view_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_usb_disconnect"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/view_disconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="未检测到摄像头，请连接USB摄像头后进行外访作业。"
                android:textColor="#A9A9A9"
                android:textSize="16sp"
                />

        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fl_stream_warning"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#FFF8DF"
        >
        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:id="@+id/tv_stream_warning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提示：摄像头未开启推流，开启推流后可进行外访作业。"
            android:textSize="12sp"
            android:textColor="#ED9D34"
            android:gravity="center_vertical"
            android:lineSpacingExtra="4dp" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_btn_ctrl"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:id="@+id/start_stop_stream"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_start_stream"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_setting"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="视频设置"
            />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_safe_exit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="安全弹出USB"
            />
    </LinearLayout>




    <FrameLayout android:id="@+id/fl_case_choose"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@color/grayBackground"
        >
        <LinearLayout
            android:id="@+id/ll_empty_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center">

            <!-- 顶部插画 -->
            <ImageView
                android:id="@+id/iv_empty_illustration"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/img_case_empty" />

            <!-- 提示文字 -->
            <TextView
                android:layout_marginTop="-16dp"
                android:id="@+id/tv_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无选择案件，请选择外访案件后\n开始外访作业！"
                android:textSize="14sp"
                android:textColor="@color/grayText"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

            <!-- 操作按钮 -->
            <Button
                android:layout_marginTop="48dp"
                android:id="@+id/btn_select_case"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:text="选择外访案件"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_btn_primary"
                 />

        </LinearLayout>
    </FrameLayout>

